{
  "name": "chrome-extension-tarou",
  "version": "0.0.1",
  "keyword": "Chrome extension, Vite, Vue, Vue3, GBF",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,vue,js,html,scss",
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "build": "run-s clear build:web build:prepare",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "zip": "esno scripts/zip.ts",
    "watch": "npm-watch",
    "clear": "rimraf --glob dist",
    "lint": "eslint --cache ."
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.40.2",
    "@iconify-json/carbon": "^1.1.19",
    "@types/archiver": "^5.3.2",
    "@types/chrome": "^0.0.243",
    "@types/node": "^20.4.9",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vueuse/core": "^10.3.0",
    "archiver": "^5.3.2",
    "cheerio": "^1.0.0-rc.12",
    "dayjs": "^1.11.9",
    "element-plus": "^2.3.9",
    "eslint": "^8.46.0",
    "esno": "^0.17.0",
    "fast-glob": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "pnpm": "^8.6.12",
    "rimraf": "^5.0.1",
    "sass": "^1.65.1",
    "typescript": "^5.1.6",
    "unocss": "^0.55.0",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-icons": "^0.16.5",
    "unplugin-vue-components": "^0.25.1",
    "vite": "^4.4.9",
    "vue": "^3.3.4"
  }
}
