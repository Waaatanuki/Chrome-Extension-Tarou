{
  "name": "chrome-extension-tarou",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@8.15.3",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,vue,js,html,scss",
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "ba": "run-s clear build:alp build:prepare",
    "bp": "run-s clear build:prod build:prepare",
    "build:prepare": "esno scripts/prepare.ts",
    "build:alp": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "zip": "esno scripts/zip.ts",
    "watch": "npm-watch",
    "clear": "rimraf --glob dist",
    "up": "taze major -I",
    "lint": "eslint --cache ."
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@iconify-json/carbon": "^1.1.30",
    "@iconify-json/game-icons": "^1.1.7",
    "@types/archiver": "^6.0.2",
    "@types/chrome": "^0.0.260",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.19",
    "@types/uuid": "^9.0.8",
    "@types/webextension-polyfill": "^0.10.7",
    "@unocss/eslint-config": "^0.58.5",
    "@unocss/reset": "^0.58.5",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vueuse/core": "^10.7.2",
    "@vueuse/shared": "^10.9.0",
    "archiver": "^6.0.1",
    "cheerio": "^1.0.0-rc.12",
    "copy-text-to-clipboard": "^3.2.0",
    "dayjs": "^1.11.10",
    "element-plus": "^2.5.5",
    "eslint": "^8.56.0",
    "esno": "^4.0.0",
    "fast-glob": "^3.3.2",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "pnpm": "^8.15.3",
    "rimraf": "^5.0.5",
    "sass": "^1.71.0",
    "taze": "^0.13.3",
    "typescript": "^5.3.3",
    "unocss": "^0.58.5",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-icons": "^0.18.5",
    "unplugin-vue-components": "^0.26.0",
    "uuid": "^9.0.1",
    "vite": "^5.1.3",
    "vue": "^3.4.19",
    "webextension-polyfill": "^0.10.0"
  }
}
