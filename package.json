{
  "name": "chrome-extension-tarou",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@8.10.5",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,vue,js,html,scss",
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "build": "run-s clear build:web build:prepare",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "zip": "esno scripts/zip.ts",
    "watch": "npm-watch",
    "clear": "rimraf --glob dist",
    "up": "taze major -I",
    "lint": "eslint --cache ."
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.0.0",
    "@iconify-json/carbon": "^1.1.21",
    "@types/archiver": "^6.0.2",
    "@types/chrome": "^0.0.252",
    "@types/node": "^20.9.3",
    "@unocss/eslint-config": "^0.57.6",
    "@unocss/reset": "^0.57.6",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vueuse/core": "^10.6.1",
    "archiver": "^6.0.1",
    "cheerio": "^1.0.0-rc.12",
    "dayjs": "^1.11.10",
    "element-plus": "^2.4.2",
    "eslint": "^8.54.0",
    "esno": "^4.0.0",
    "fast-glob": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "pnpm": "^8.10.5",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "taze": "^0.12.0",
    "typescript": "^5.3.2",
    "unocss": "^0.57.6",
    "unplugin-auto-import": "^0.16.7",
    "unplugin-icons": "^0.17.4",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^5.0.0",
    "vue": "^3.3.8"
  }
}
