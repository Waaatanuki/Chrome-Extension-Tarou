{
  "name": "chrome-extension-tarou",
  "type": "module",
  "version": "0.0.1",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,vue,js,html,scss",
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "dev": "vite --port 1234 --open",
    "ba": "run-s clear build:alp build:prepare build:js",
    "bp": "run-s clear build:prod build:prepare build:js",
    "build:alp": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build:prepare": "tsx scripts/prepare.ts",
    "build:js": "vite build --config vite.config.content.mts",
    "zip": "tsx scripts/zip.ts",
    "watch": "npm-watch",
    "clear": "rimraf --glob dist",
    "up": "taze major -I",
    "lint": "eslint --cache ."
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@iconify/json": "^2.2.323",
    "@iconify/vue": "^4.3.0",
    "@types/archiver": "^6.0.3",
    "@types/chrome": "^0.0.313",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.14.0",
    "@types/uuid": "^10.0.0",
    "@types/w3c-image-capture": "^1.0.10",
    "@unocss/eslint-config": "^66.0.0",
    "@unocss/reset": "^66.0.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vueuse/core": "^13.0.0",
    "@vueuse/shared": "^13.0.0",
    "archiver": "^7.0.1",
    "cheerio": "^1.0.0",
    "copy-text-to-clipboard": "^3.2.0",
    "dayjs": "^1.11.13",
    "element-plus": "^2.9.7",
    "eslint": "^9.24.0",
    "fast-glob": "^3.3.3",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.13.0",
    "pinia": "^3.0.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.3",
    "typescript": "5.7.3",
    "unocss": "^66.0.0",
    "unplugin-auto-import": "^19.1.2",
    "unplugin-vue-components": "^28.4.1",
    "uuid": "^11.1.0",
    "vite": "^6.2.5",
    "vue": "^3.5.13",
    "vue-draggable-next": "^2.2.1",
    "webext-bridge": "^6.0.1"
  }
}
