{
  "manifest_version": 3,
  "name": "Tarou",
  "version": "3.1.2",
  "description": "extension for gbf",
  "icons": {
    "16": "./assets/icon-16.png",
    "48": "./assets/icon-48.png",
    "128": "./assets/icon-128.png"
  },
  "permissions": ["storage", "unlimitedStorage", "tabs", "notifications", "debugger", "webRequest", "contextMenus", "scripting", "sidePanel"],
  "host_permissions": [
    "*://*.granbluefantasy.jp/*",
    "*://gbf.game.mbga.jp/*",
    "*://*.akamaized.net/*",
    "*://localhost/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.granbluefantasy.jp/*",
        "*://gbf.game.mbga.jp/*",
        "*://localhost/*"
      ],
      "js": ["content_script.mjs"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": [
        "*://*.granbluefantasy.jp/*",
        "*://gbf.game.mbga.jp/*",
        "*://localhost/*"
      ]
    }
  ],
  "action": {
    "default_title": "Tarou",
    // "default_popup": "src/views/popup/main.html",
    "default_icon": {
      "16": "./assets/icon-16.png",
      "48": "./assets/icon-48.png",
      "128": "./assets/icon-128.png"
    }
  },
  "minimum_chrome_version": "99"
}
