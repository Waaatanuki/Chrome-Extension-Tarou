{
  "manifest_version": 3,
  "name": "Tarou",
  "version": "0.0.3",
  "description": "extension for gbf",
  "icons": {
    "16": "./assets/icon-16.png",
    "48": "./assets/icon-48.png",
    "128": "./assets/icon-128.png"
  },
  "permissions": ["storage", "unlimitedStorage"],
  "host_permissions": [
    "*://*.granbluefantasy.jp/*",
    "*://gbf.game.mbga.jp/*",
    "*://waaatanuki.github.io/gbf-app/*",
    "*://waaatanuki.gitee.io/gbf-app/*",
    "*://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.granbluefantasy.jp/*",
        "*://gbf.game.mbga.jp/*",
        "*://waaatanuki.github.io/gbf-app/*",
        "*://waaatanuki.gitee.io/gbf-app/*",
        "*://localhost/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "devtools_page": "src/views/devtools/main.html"
}
